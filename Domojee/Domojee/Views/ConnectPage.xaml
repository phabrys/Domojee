<Page x:Class="Domojee.Views.ConnectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ViewModels="using:BackgroundWorker"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:Domojee.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Page.Resources>
        <Storyboard x:Name="Logo" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="image" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleX)">
                <EasingDoubleKeyFrame KeyTime="0:0:2" Value="-1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseIn" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:4" Value="1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseInOut" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="image" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleY)">
                <EasingDoubleKeyFrame KeyTime="0:0:2" Value="1" />
                <EasingDoubleKeyFrame KeyTime="0:0:4" Value="1" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Page.Resources>
    <Page.DataContext>
        <ViewModels:ConfigurationViewModel />
    </Page.DataContext>
    <Page.Background>
        <StaticResource ResourceKey="BlueBase" />
    </Page.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="102" />
            <RowDefinition Height="58" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <ContentThemeTransition />
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
            <TextBlock x:Name="tbTitle"
                       HorizontalAlignment="Center"
                       Foreground="White"
                       Style="{StaticResource TitleTextBlockStyle}"
                       Text="Domojee"
                       TextWrapping="Wrap" />
            <TextBlock x:Uid="connection"
                       x:Name="tbSubtitle"
                       Margin="0,5,0,0"
                       HorizontalAlignment="Center"
                       Foreground="White"
                       RenderTransformOrigin="0.5,0.5"
                       Style="{StaticResource CaptionTextBlockStyle}"
                       Text="Connectez-vous à votre box domotique"
                       TextWrapping="Wrap" />
            <Image x:Name="image"
                   Width="44"
                   Height="44"
                   Margin="0,5,0,0"
                   HorizontalAlignment="Center"
                   RenderTransformOrigin="0.5,0.5"
                   Source="ms-appx:///Assets/Square44x44Logo.png">
                <Image.RenderTransform>
                    <CompositeTransform />
                </Image.RenderTransform>
            </Image>
        </StackPanel>
        <StackPanel x:Name="FlyoutURL"
                    Grid.Row="1"
                    Margin="0,5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Background="White"
                    BorderThickness="1"
                    CornerRadius="2"
                    Padding="10,2"
                    RequestedTheme="Light">
            <StackPanel.Transitions>
                <TransitionCollection>
                    <AddDeleteThemeTransition />
                </TransitionCollection>
            </StackPanel.Transitions>
            <TextBlock HorizontalAlignment="Center" Text="Entrez ici l'URL d'accès à votre box" />
            <TextBlock HorizontalAlignment="Center" Text="Ex:  http://192.168.1.10/jeedom" />
        </StackPanel>
        <StackPanel x:Name="stackPanel"
                    Grid.Row="2"
                    Width="280"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Background="White"
                    BorderThickness="1"
                    CornerRadius="2"
                    Padding="15,5,15,10"
                    RequestedTheme="Light">
            <TextBox x:Name="tbAddress"
                     Margin="0,0,0,5"
                     VerticalAlignment="Top"
                     GotFocus="tbAddress_GotFocus"
                     Header="Serveur"
                     LostFocus="tbAddress_LostFocus"
                     PlaceholderText="URL d'accès au serveur"
                     Text="{Binding Address,
                                    Mode=TwoWay}"
                     TextWrapping="Wrap" />
            <TextBox x:Name="pbAPIKey"
                     Margin="0,5"
                     VerticalAlignment="Top"
                     Header="Clé API"
                     PlaceholderText="Clé API à récupérer dans JEEDOM"
                     Text="{Binding ApiKey,
                                    Mode=TwoWay}" />
            <Button x:Name="bConnect"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Stretch"
                    Click="bConnect_Click"
                    Content="Connexion" />
        </StackPanel>
    </Grid>
</Page>
