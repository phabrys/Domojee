<Page x:Class="Domojee.Views.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ctl="using:Domojee.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:Domojee.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Page.Resources>
        <Storyboard x:Name="Logo" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="image" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleX)">
                <EasingDoubleKeyFrame KeyTime="0:0:2" Value="-1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseIn" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:4" Value="1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseInOut" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Page.Resources>
    <Page.Background>
        <ImageBrush ImageSource="ms-appx:///Images/WP.jpg" Stretch="UniformToFill" />
    </Page.Background>


    <ctl:MainMenu x:Name="menu">
        <ScrollViewer Tag="A propos">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Padding="10">
                <TextBlock x:Name="textBlock"
                           HorizontalAlignment="Center"
                           FontWeight="Bold"
                           Foreground="White"
                           Style="{StaticResource TitleTextBlockStyle}"
                           Text="Domojee"
                           TextWrapping="Wrap" />
                <Image x:Name="image"
                       Width="150"
                       RenderTransformOrigin="0.5,0.5"
                       Source="ms-appx:///Assets/Square150x150Logo.png">
                    <Image.RenderTransform>
                        <CompositeTransform />
                    </Image.RenderTransform>
                </Image>
                <TextBlock HorizontalAlignment="Center"
                           Foreground="White"
                           Style="{StaticResource SubtitleTextBlockStyle}"
                           Text="Connectez-vous à votre box domotique" />
                <StackPanel Margin="0,20,0,0"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                    <StackPanel Padding="0,0,10,0">
                        <TextBlock Foreground="White" Text="Version" />
                        <TextBlock Foreground="White" Text="Développeur" />
                    </StackPanel>
                    <StackPanel>
                        <TextBlock x:Name="tbVersion"
                                   Foreground="White"
                                   Text=": n/a" />
                        <TextBlock Foreground="White" Text=": Fabrice Périna" />
                    </StackPanel>
                </StackPanel>
                <TextBlock Margin="0,20,0,0"
                           HorizontalAlignment="Center"
                           Foreground="White"
                           Text="Merci à toute l'équipe JEEDOM" />
                <TextBlock HorizontalAlignment="Center"
                           Foreground="White"
                           Text="Pour leur solution domotique innovante" />
                <TextBlock HorizontalAlignment="Center"
                           Foreground="White"
                           Text="https://jeedom.fr" />
            </StackPanel>
        </ScrollViewer>
    </ctl:MainMenu>
</Page>
