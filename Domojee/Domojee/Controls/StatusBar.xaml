<UserControl
    x:Class="Domojee.Controls.StatusBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Domojee.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="24"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <RelativePanel Height="24" Background="Brown">
        <ProgressRing
            x:Name="ProgressStatus"
            Foreground="White"
            Margin="5,2"
            IsActive="{Binding Updating, FallbackValue=True}"
            RelativePanel.AlignRightWithPanel="True"
            RelativePanel.AlignVerticalCenterWithPanel="True" />
        <TextBlock
            x:Name="StatusMessage"
            FontSize="12"
            Margin="5,2"
            Foreground="White"
            RelativePanel.AlignLeftWithPanel="True"
            RelativePanel.AlignVerticalCenterWithPanel="True"
            Text="{Binding LoadingMessage, FallbackValue=Prêt}" />
    </RelativePanel>
</UserControl>